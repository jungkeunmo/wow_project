extends ../../layouts/main.pug

block content
    div.questiontop
        a(href="/board/questionlist") 
            p 문의하기
    div.questionlist    
        a(href="/event/eventlist") 
            p 이벤트
        a(href="/free/list") 
            p 자유게시판
        a(href="/notice/noticelist") 
            p 공지사항 
        a(href="/fqa/fqalist") 
            p FQA  
        a(href="/qna/qnalist") 
            p Q＆A               
    div.questionBox
        ul.questionBox__List
            li 번호
            li 제목
            li 작성자
            li 작성일
        each b in boardList
            a(href=`/board/questiondetail?bid=${b.id}`)
                ul.questionBox__dataList
                    li #{b.id}
                    li #{b.title}
                    li #{b.name}
                    li #{b.createdAt}
    div.questionbuttom                
        if loggedIn 
            a(href="/board/questioncreate") 
                button 글작성            
        